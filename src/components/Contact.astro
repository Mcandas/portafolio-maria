---
import Button from '@components/ui/Button.astro';
import Social from '@components/ui/Social.astro';
---

<section
    data-testid="contact"
    id="contact"
    class="mb-10 flex flex-col items-center justify-center lg:mb-0 lg:h-screen lg:flex-row"
>
    <div class="mb-10 flex w-full flex-col items-center justify-center lg:mb-0 lg:w-1/2">
        <h2 class="font-monospace text-2xl text-orange lg:text-4xl">Contacto</h2>
        <span class="mb-6 ml-2 h-1 w-10 bg-rose dark:bg-pink"></span>
    </div>

    <div class="w-full text-justify text-black dark:text-white lg:w-1/2">
        <form class="w-full max-w-lg" action="mailto:mcandas@appventurers@gmail.com" method="post" enctype="text/plain"></form>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3 mb-6 md:mb-0">
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="nombre">
                        Nombre
                    </label>
                    <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="nombre" type="text" placeholder="Nombre">
                </div>
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="email">
                        Correo electrónico
                    </label>
                    <input class="appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" id="email" type="email" placeholder="Correo electrónico">
                </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
                <div class="w-full px-3">
                    <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" for="mensaje">
                        Mensaje
                    </label>
                    <textarea class="no-resize appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" id="mensaje" placeholder="Mensaje"></textarea>
                </div>
            </div>
            <div class="md:flex md:items-center">
                <div class="md:w-1/3"></div>
                <div class="md:w-2/3">
					<Button size={'lg'} style={'primary'} name="Contact">Enviar</Button>
                </div>
            </div>
        </form>
    </div>
</section>
